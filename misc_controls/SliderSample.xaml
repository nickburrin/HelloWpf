<Window x:Class="HelloWpf.misc_controls.SliderSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SliderSample" Height="200" Width="300">
	
	<StackPanel VerticalAlignment="Center" Margin="10">
		<Slider Name="slider" Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True"/>
		<TextBox Text="{Binding ElementName=slider, Path=Value, StringFormat={}{0:#.##}}" Margin="10"/>
	</StackPanel>
</Window>
